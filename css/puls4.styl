azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #dd4F24

// Agregar fuentes icomoon

@font-face {
  font-family: 'iconitos';
  src:  url('../fonts/icomoon.eot?duk29');
  src:  url('../fonts/icomoon.eot?duk29#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?duk29') format('truetype'),
    url('../fonts/icomoon.woff?duk29') format('woff'),
    url('../fonts/icomoon.svg?duk29#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}


a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	padding 0.5em
	position relative
	overflow hidden
	box-shadow 0 5px 2px rgba(0, 0, 0, 0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		width 60px
		float left

		img
			width 50px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			text-decoration none
			font-weight bold
			font-style italic
			font-size 14px
		
		.publicar
			background naranja
			color white
			text-decoration none
			padding 0.2em 0.5em
			font-style italic
			text-shadow 2px 2px 3px black
			float right
			margin -5px 1em 0 0
			
			&:before
				font-family: "iconitos"
				content "\e903   "


		.titulo
			font-size 20px
			font-weight bold
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2

			img
				width 50px
				border-radius 50%
		
		.flechita
			display block	
			background naranja
			color white
			text-align right
			position absolute
			right 0
			width 50%
			top 15px
			padding 1px
			text-decoration none

			&:after
				font-family: "iconitos"
				content "\e901"
				text-align right
				text-shadow 2px 2px 2px black

nav
	background azul
	border-left 15px solid white
	position relative

	&:before // Creaci√≥n de efecto de flecha
		content ""
		border-left 7px solid white
		border-bottom 20px solid transparent 
		border-top 20px solid transparent
		position absolute
		top 0
		left 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		li
			display inline-block
			
			a
				color white
				text-decoration none
				padding 0 0.2em
				display inline-block
				margin 0 0.5em

.posts
	padding 0.5em

	.post
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black,0.5)
		border-radius 0 0 0.5em 0.5em
		margin-bottom: 1em

		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px

				.titulo
					color gris_oscuro
					font-size 18px
					font-style: italic
					margin 0
					padding 0.5em 0.5em 0 0

				.autor
					margin 0.5em 0 2em 0

				.tag
					background azul
					color white
					text-decoration none
					padding 0.2em 0.5em
					border-radius 0.5em

				.fecha
					float right
					margin 0 1em 0 0
			
			.foto
				float left
				text-align: top 
				
				img
					height 156px
					width 120px

		.acciones
			border-top 3px solid azul
			padding 0.4em
			left 0
			overflow hidden
			position relative

			.votos
				float left


				.down
					color red

					&:before
						font-family: "iconitos"
						content "\e901"
				
				.up
					color green

					&:before
						font-family: "iconitos"
						content "\e902"
				
				.down
				.up
					text-decoration none
					font-size 1.5em

				.total
					vertical-align: middle
					display inline-block
					position relative
					margin 0 0 5px 0


			.datos
				float right

				.comentarios
					background gris_oscuro
					color white 
					margin 4px 0.2em 0 0
					padding 2px 5px
					text-decoration none
					border-radius 3px
					position relative
					display inline-block

				.estrellita
					text-decoration none
					color: #EE0
					&:before
						font-family "iconitos"
						content "\e904"
						position relative
						display inline-block
						margin 5px 0 0 0

footer 
	background naranja
	color rgba(white,0.5)
	text-align center
	position fixed
	bottom 0
	width 100%


	h3
		font-size 16px
		font-weight normal

		strong
			display block
			
		.mejor
			&:before
			&:after
				content " - "

@media screen and (min-width: 768px)
	
	.posts
		.post
			width: 48%
			display inline-block
			vertical-align: top
			&:nth-child(odd)
				margin-right: 2%

	
	header
		.titular
			.publicar
				position relative
				padding-left 3em
				&:before
					position absolute
					left 0
					top -5px
					font-size 35px