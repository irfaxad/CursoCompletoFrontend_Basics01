naranja = #DD4F24
azul = #22BCE0
gris_oscuro = #444
gris_texto = #7a7a7a
fondo = #e8e8e8

a
  color naranja

body
  background fondo
  color #444
  font-family Arial
  font-size 16px

header
  background #444
  box-shadow 0 5px 2px rgba(0, 0, 0, 0.2)
  color white
  overflow hidden
  padding .5em
  position relative
  z-index 1

  .logo
    border-right 1px solid azul
    width 60px

    img
      width 50px

  .titular
    margin 0 60px 0 70px
    position relative

    .titulo
      font-weight bold
      font-size 28px
      margin 0
      padding 0

    .filtro
      color azul
      font-size 14px
      font-style italic
      font-weight bold
      text-decoration none

    .publicar
      background naranja
      color white
      font-size 14px
      font-style italic
      margin -3px 1em 0 0
      padding 0.2em 0.5em
      text-align right
      text-decoration none
      text-shadow 1.5px 1.5px 3px black
      position absolute
      right 0px
      width 90px

  .usuario
    position absolute
    top 10px
    right 10px

    .avatar
      margin 0 1em 0 0
      position relative
      z-index 2

      img
        width 50px
        border-radius 50%

    .flechita
      position absolute
      margin 0 0 0 0
      padding 3px
      width 50%
      top 15px
      right 0
      background naranja
      color white
      display block
      text-align right

nav
  background azul
  border-left 15px white solid
  position relative

  &:before
    border-bottom 20px transparent solid
    border-left 10px white solid
    border-top 20px transparent solid
    content ""
    position absolute
    top 0
    left 0

  .menu
    height 40px
    line-height 40px
    margin 0 0 0 10px
    overflow-x auto
    padding 0
    white-space nowrap

    li
      display inline-block

      a
        color white
        display inline-block
        margin 0 0.5em
        padding 0 0.2em
        text-decoration none

section
  .posts
    padding 0.5em

    .post
      background white
      box-shadow 2px 2px 10px rgba(0, 0, 0, 0.2)
      border-radius 0 0 0.5em 0.5em
      color gris_texto

      .descripcion
        color gris_texto

        .foto
          float left

          img
            height 160px
            width 120px
            vertical-align top

        .detalles
          height 160px
          margin-left 130px
          overflow-x auto

          .titulo
            font-size 18px
            font-style italic
            color gris_oscuro
            margin 0
            padding 0.5em 0.5em 0 0

          .autor
            margin 0.5em 0 2em 0

          .tag
            background azul
            color white
            padding 0.2em 0.5em
            text-decoration none
            border-radius 0.5em

          .fecha
            float right
            margin 0 1em 0 0

      .acciones
        border-top 3px azul solid
        padding 0.5em
        overflow hidden

        .votos
          float left

          a
            text-decoration none

          .down
            color red

          .up
            color green

        .datos
          float right

          .comentarios
            background gris_texto
            color white
            margin-right 1em
            padding 2px 5px
            text-decoration none
            border-radius 5px

footer
  background naranja
  color rgba(255,255,255,0.8)
  text-align center
  font-size 14px
  position fixed
  bottom 0
  width 100%

  h3 strong
    display block

  .mejor
    font-weight lighter

    &:after
      content "-"

    &:before
      content "-"

.left
  float left

.right
  float right